<div class="my-5">
	<div class="p-5 bg-light background-hero" style="background-image: url({{ article.image | img_url: 'master' }})">
		<div class="container-fluid text-center">
			<h1>{{ article.title }}</h1>
			<p class="text-center mt-4 mb-0">Autor: <a href="{{ article.user }}" class="text-decoration-none text-dark"><strong>{{ article.author }}</strong></a> <span class="px-1">|</span> Publicacion: <em>{{ article.published_at | date: "%a %b %d %Y" }}</em></p>
		</div>
	</div>
</div>

<style>
	.background-hero {
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		position: relative;
		z-index: 1;
	}

	.background-hero::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0,0,0,0.4);
		z-index: 0;
	}

	.background-hero div, .background-hero a strong {
		position: relative;
		z-index: 1;
		color: #FFFFFF;
	}
</style>