<section class="mt-4">
	<div class="container">
        <h1 class="py-5">Colecciones:</h1>
		<div class="row" data-masonry="{ percentPosition: true }">
			{% for collection in collections %}
				<div class="col-12 col-sm-6 col-md-3 col-lg-3 mb-4">
					<div class="card card-masory border-light">
						<a href="{{ collection.url }}">
							{% if collection.image %}
								{{ collection.image | img_url: 'master' | img_tag: "", "card-img-top" }}
							{% else %}
								{{ collection.products.fisrt.image | img_url: 'master' | img_tag: "", "card-img-top" }}		
							{% endif %}
						</a>
						<div class="card-body p-3 text-center">
                            <a href="{{ collection.url }}" class="text-decoration-none text-dark" style="font-size: 20px;">{{ collection.title }}</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>