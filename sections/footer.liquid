<footer class="bg-danger text-white text-center text-md-start">
	<div class="container py-5">
		<div class="row">
			{% for block in section.blocks %}
				<div class="col-12 col-md-3 col-lg-3 pb-5 pb-md-0">
					{% if block.type == 'text' %}
						<div class="container-text">
							<h5 class="text-uppercase">{{ block.settings.title }}</h5>
							<div class="content">
								{{ block.settings.content }}
							</div>
						</div>
					{% elsif block.type == 'image' %}
						<div class="container-image bg-light">
							{% if block.settings.image == blank %}
								{{ 'image' | placeholder_svg_tag }}
							{% else %}
								{{ block.settings.image | img_url: 'master' | img_tag: '', 'w-100' }}	
							{% endif %}
						</div>
					{% elsif block.type == 'menu' %}
						<div class="ps-md-5">
							{% if block.settings.menu.size > 0 %}
								<h5 class="text-uppercase">{{ block.settings.title }}</h5>
								<ul class="list-unstyled mb-0">
									{% for link in block.settings.menu.links %}
										<li><a href="{{ link.url }}" class="text-white">{{ link.title }}</a></li>								
									{% endfor %}
								</ul>
							{% endif %}
						</div>
					{% endif %}
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="text-center py-3" style="background-color: rgba(0, 0, 0, 0.2);">
		<span>Â© 2021 - Boutique Fashion. All rights reserved</span>
	</div>
</footer>

{% schema %}
{
	"name": "Footer",
	"blocks": [
		{
			"name": "Text",
			"type": "text",
			"limit": 4,
			"settings": [
				{
					"type": "text",
					"id": "title",
					"label": "Title",
					"default": "Boutique Fashion"
				},
				{
					"type": "textarea",
					"id": "content",
					"label": "Content",
					"default": "Bienvenidos a boutique fashion en donde encontrara las mejores marcas de ropa y a los mejores precios."
				}
			]
		},
		{
			"name": "Image",
			"type": "image",
			"limit": 4,
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Image"
				}
			]
		},
		{
			"name": "Menu",
			"type": "menu",
			"limit": 4,
			"settings": [
				{
					"type": "text",
					"id": "title",
					"label": "title",
					"default": "Titulo"
				},
				{
					"type": "link_list",
					"id": "menu",
					"label": "Menu"
				}
			]
		}
	]
}
{% endschema %}