<div class="container">
	<h1 class="faq-title">{{ section.settings.section_title }}</h1>
	<div class="container-grid">
		{% for block in section.blocks %}
			<a href="{{ block.settings.button_link }}" class="product ask card bg-danger p-3 d-block">
				<div class="w-100 h-100 d-flex justify-content-center align-items-center">
					<div class="content text-white text-center">
						<h4>{{ block.settings.ask_box }}</h4>
					</div><!-- /.content -->
				</div><!-- /.product -->

			</a>
		{% endfor %}
	</div><!-- /.container-grid -->	
</div><!-- /.page-width -->

{% style %}
	.faq {
		padding: 80px 0px;
	}

	.ask {
		height: 300px;
		display: flex;
		align-items: center;
		justify-content: center;
		text-decoration: none;
	}
  
	.faq-title {
		text-align: left;
		margin-top: 0;
		margin-bottom: 50px;
	}

	.error-collection {
		width: 100%;
		text-align: center;
	}
  
  	.container-grid {
		min-width: 100%;
		display: flex;
		flex-wrap: wrap;
		margin-left: -15px;
		margin-right: -15px;
  	}
  
  	.container-grid .product {
		width: calc(100% / 4 - 30px);
		margin-right: 15px;
		margin-left: 15px;
		margin-bottom: 30px;
  	}
  
  	.container-grid .product .image {
		display: block;
		position: relative;
		padding-bottom: 100%;
		background-color: transparent;
		overflow: hidden;
  	}
  
  	.container-grid .product .image img {
		display: block;
		max-width: 100%;
		position: absolute;
		top: 0;
		left: 0;
		height: 100%;
		width: 100%;
  	}
{% endstyle %}

{% schema %}
{
	"name": "FAQ",
	"tag": "section",
	"class": "faq",
	"settings": [
		{
			"type": "text",
			"id": "section_title",
			"label": "Section Title",
			"default": "Preguntas Frecuentes"
		}
	],
	"blocks": [
		{
			"name": "Ask",
			"type": "ask_question",
			"settings": [
				{
					"type": "richtext",
					"id": "ask_box",
					"label": "Ask here?",
					"default": "<p>Ask?</p>"
				},
				{
					"type": "url",
					"id": "button_link",
					"label": "Button link"
				}
			]
		}
	]

}
{% endschema %}