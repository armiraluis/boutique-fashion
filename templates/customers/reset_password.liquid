<div class="container">
	<div class="row pt-5 mb-5">
		<div class="col-12 mb-4">
			<h2 class="text-center">Resetear contraseña</h2>
			<p class="text-center">Ingrese una nueva contraseña para su cuenta.</p>
		</div>
		<div class="col-12 col-md-4 mx-auto">
			{% form 'reset_customer_password' %}
				{% if form.errors %}
					<div class="alert alert-warning">
						{{ form.errors | default_errors }}
					</div>
				{% endif %}
				<div class="form-floating mb-3">
					<input type="password" name="customer[password]" class="form-control" id="password" placeholder="Contraseña">
					<label for="password">Contraseña</label>
				</div>
				<div class="form-floating mb-3">
					<input type="password" name="customer[password_confirmation]" class="form-control" id="confirmPassword" placeholder="Confirmar contraseña">
					<label for="confirmPassword">Confirmar contraseña</label>
				</div>

				<div class="form-group d-flex justify-content-center">
					<input type="submit" class="btn btn-danger me-2" value="Resetear contraseña">
				</div>
			{% endform %}
		</div>
	</div>
</div>