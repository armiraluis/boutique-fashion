<section class="register">
	<div class="container">
        <div class="row">
            <div class="col-12 col-md-7 mx-auto" style="margin: 5vh 0 10vh 0;">
                <div class="heading text-center mt-5">
                    <h1 class="mb-5">Crear una cuenta</h1>
                </div>
                <div class="create-customer-form my-5">
                    {% form 'create_customer' %}
                        {% if form.errors.size > 0 %}
                            <div class="alert alert-waring">
                                {{ form.errors | default_erros }}
                            </div>
                        {% endif %}
                        <div class="form-floating mb-3">
                            <input type="text" name="customer[first_name]" id="firstname" placeholder="Nombre" class="form-control" required>
                            <label for="firstname">Nombre</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" name="customer[last_name]" id="lastname" placeholder="Apellidos" class="form-control" required>
                            <label for="lastname">Apellidos</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" name="customer[email]" id="email" placeholder="Correo Electronico" class="form-control" required>
                            <label for="email">Correo Electronico</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" name="customer[password]" id="password" placeholder="Contraseña" class="form-control" required>
                            <label for="password">Contraseña</label>
                        </div>
                        <div class="d-flex justify-content-center">
                            <input type="submit" class="btn btn-lg btn-danger" value="Crear Cuenta">
                        </div>
                    {% endform %}
                </div>
            </div>
        </div>
    </div>
</section>